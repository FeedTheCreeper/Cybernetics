package main.cybernetics.blocks;

//General place to register all your blocks.

import cpw.mods.fml.common.registry.GameRegistry;
import net.minecraft.block.Block;
import net.minecraft.block.material.Material;
import net.minecraftforge.common.MinecraftForge;

public class BlockRegistry {

    //blocks
	public final static Block chromiteOre = new chromiteOre(Material.rock);

    public static void registerBlocks() {
    	MinecraftForge.setBlockHarvestLevel(chromiteOre, "pickaxe", 3);
    	GameRegistry.registerBlock(chromiteOre, "chromiteOre");
    }
}
